import Navbar from "../components/Navbar.astro";

const loadAnalyticsScript = async function loadAnalyticsScript() {
  // if (!Astro.isBrowser) {
  //   return; // Exit if not in the browser
  // }

  // if (
  //   window.location.hostname === "localhost" ||
  //   window.location.hostname === "127.0.0.1"
  // ) {
  //   console.log("Google Analytics tracking is disabled for localhost.");
  //   return; // Exit the function to prevent loading the script
  // }

  try {
    const response = await fetch(
      "https://www.googletagmanager.com/gtag/js?id=G-56FMGB8XJ3"
    );
    if (!response.ok) throw new Error("Network response was not ok.");

    const scriptContent = await response.text();

    const script = document.createElement("script");
    script.textContent = scriptContent;
    script.async = true;
    document.head.appendChild(script);

    window.dataLayer = window.dataLayer || [];
    function gtag() {
      dataLayer.push(arguments);
    }
    gtag("js", new Date());
    gtag("config", "G-56FMGB8XJ3");
  } catch (error) {
    console.error("Failed to load Google Analytics script:", error);
  }
};

// Load the script
loadAnalyticsScript();
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home - Astro E-commerce</title>

    <!-- Inline script to fetch and execute Google Analytics script -->
    <script is:inline>
      {
        loadAnalyticsScript;
      }
    </script>
  </head>
